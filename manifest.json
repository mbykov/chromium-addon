{
    "name": "Morpheus - Chromium-plugin for Sanskrit",
    "description": "a simple samasa-splitter, morph analyzer and dictionaries for Sanskrit",
    "version": "0.3.1",
    "permissions": ["alarms", "tabs", "contextMenus", "declarativeWebRequest", "*://*/*"],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["data/morpheus.css", "popup/translit.css", "popup/popup.css", "popup/tree/chemzqm-tree@0.0.3/tree.css"],
            "js": ["build/popup/content.js"]
        }
    ],
    "web_accessible_resources": [
        "fonts/*.*",
        "popup/img/*.gif"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon" : "data/img/book.png",
        "default_title": "Morpheus v.0.3"
    },
    "manifest_version": 2
}
